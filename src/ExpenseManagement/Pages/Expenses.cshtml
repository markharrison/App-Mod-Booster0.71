@page
@model ExpensesModel
@{
    ViewData["Title"] = "Expenses";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h2>Expenses</h2>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="FilterText" value="@Model.FilterText" class="form-control" placeholder="Filter by description, category, user, or status..." />
                <button type="submit" class="btn btn-primary">Search</button>
                @if (!string.IsNullOrWhiteSpace(Model.FilterText))
                {
                    <a href="/Expenses" class="btn btn-secondary">Clear</a>
                }
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>User</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Expenses.Any())
                    {
                        @foreach (var expense in Model.Expenses)
                        {
                            <tr>
                                <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                                <td>@expense.CategoryName</td>
                                <td>Â£@expense.AmountDecimal.ToString("F2")</td>
                                <td>
                                    <span class="badge @(expense.StatusName switch {
                                        "Draft" => "bg-secondary",
                                        "Submitted" => "bg-warning",
                                        "Approved" => "bg-success",
                                        "Rejected" => "bg-danger",
                                        _ => "bg-secondary"
                                    })">
                                        @expense.StatusName
                                    </span>
                                </td>
                                <td>@expense.UserName</td>
                                <td>@(string.IsNullOrEmpty(expense.Description) ? "-" : expense.Description)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                @if (!string.IsNullOrWhiteSpace(Model.FilterText))
                                {
                                    <p>No expenses found matching "@Model.FilterText"</p>
                                }
                                else
                                {
                                    <p>No expenses found</p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <a asp-page="/Index" class="btn btn-secondary">Back to Dashboard</a>
            <a asp-page="/AddExpense" class="btn btn-primary">Add New Expense</a>
        </div>
    </div>
</div>

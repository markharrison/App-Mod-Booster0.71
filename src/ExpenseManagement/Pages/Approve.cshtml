@page
@model ExpenseManagement.Pages.ApproveModel
@{
    ViewData["Title"] = "Approve Expenses";
}

<div class="approve-page">
    <h1>Approve Expenses</h1>
    <p class="subtitle">Pending expenses awaiting approval</p>

    <div class="filters">
        <label for="reviewerId">Approving as:</label>
        <select id="reviewerId" name="reviewerId" class="form-control" style="width: auto; display: inline-block;">
            @foreach (var manager in Model.Managers)
            {
                <option value="@manager.UserId">@manager.UserName</option>
            }
        </select>
    </div>

    @if (Model.PendingExpenses.Any())
    {
        <table class="expense-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Submitted By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model.PendingExpenses)
                {
                    <tr>
                        <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                        <td>@expense.CategoryName</td>
                        <td>@expense.Description</td>
                        <td class="amount">£@expense.Amount.ToString("N2")</td>
                        <td>@expense.UserName</td>
                        <td class="actions">
                            <form method="post" asp-page-handler="Approve" asp-route-id="@expense.ExpenseId" style="display:inline;">
                                <input type="hidden" name="reviewerId" id="approveReviewerId_@expense.ExpenseId" value="2" />
                                <button type="submit" class="btn btn-small btn-success">Approve</button>
                            </form>
                            <form method="post" asp-page-handler="Reject" asp-route-id="@expense.ExpenseId" style="display:inline;">
                                <input type="hidden" name="reviewerId" id="rejectReviewerId_@expense.ExpenseId" value="2" />
                                <button type="submit" class="btn btn-small btn-danger">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-data-card">
            <span class="icon">✅</span>
            <p>No pending expenses to approve.</p>
        </div>
    }
</div>

@section Scripts {
<script>
    document.getElementById('reviewerId').addEventListener('change', function() {
        var reviewerId = this.value;
        document.querySelectorAll('[id^="approveReviewerId_"]').forEach(function(input) {
            input.value = reviewerId;
        });
        document.querySelectorAll('[id^="rejectReviewerId_"]').forEach(function(input) {
            input.value = reviewerId;
        });
    });
</script>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Expense Management</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-brand">
                <a href="/Index">Expense Management System</a>
            </div>
            <div class="nav-links">
                <a href="/Index">Home</a>
                <a href="/Expenses">Expenses</a>
                <a href="/AddExpense">Add Expense</a>
                <a href="/Approve">Approve</a>
                <a href="/Chat">Chat</a>
            </div>
        </nav>
    </header>

    <main class="container">
        @if (ViewData["Error"] != null)
        {
            <div class="error-banner">
                <div class="error-content">
                    <strong>‚ö†Ô∏è Database Connection Issue</strong>
                    <p>@ViewData["Error"]</p>
                    @if (ViewData["ErrorLocation"] != null)
                    {
                        <small>Location: @ViewData["ErrorLocation"]</small>
                    }
                    @if (ViewData["ErrorGuidance"] != null)
                    {
                        <p class="guidance">üí° @ViewData["ErrorGuidance"]</p>
                    }
                    <p class="dummy-notice">Showing sample data below for demonstration purposes.</p>
                </div>
            </div>
        }
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year Expense Management System</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

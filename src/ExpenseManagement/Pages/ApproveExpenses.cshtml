@page
@model ApproveExpensesModel
@{
    ViewData["Title"] = "Approve Expenses";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h2>Approve Expenses</h2>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <h4 class="mb-3">Pending expenses:</h4>

        <form method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="FilterText" value="@Model.FilterText" class="form-control" placeholder="Filter..." />
                <button type="submit" class="btn btn-primary">Search</button>
                @if (!string.IsNullOrWhiteSpace(Model.FilterText))
                {
                    <a href="/ApproveExpenses" class="btn btn-secondary">Clear</a>
                }
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>User</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.PendingExpenses.Any())
                    {
                        @foreach (var expense in Model.PendingExpenses)
                        {
                            <tr>
                                <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                                <td>@expense.CategoryName</td>
                                <td>£@expense.AmountDecimal.ToString("F2")</td>
                                <td>@expense.UserName</td>
                                <td>@(string.IsNullOrEmpty(expense.Description) ? "-" : expense.Description)</td>
                                <td>
                                    <form method="post" style="display:inline;">
                                        <input type="hidden" name="expenseId" value="@expense.ExpenseId" />
                                        <button type="submit" asp-page-handler="Approve" class="btn btn-success btn-sm">
                                            ✓ Approve
                                        </button>
                                        <button type="submit" asp-page-handler="Reject" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to reject this expense?');">
                                            ✗ Reject
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                @if (!string.IsNullOrWhiteSpace(Model.FilterText))
                                {
                                    <p>No pending expenses found matching "@Model.FilterText"</p>
                                }
                                else
                                {
                                    <p>No pending expenses found</p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <a asp-page="/Index" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>
</div>

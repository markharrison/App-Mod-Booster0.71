@page
@model ExpenseManagement.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="dashboard">
    <h1>Expense Management Dashboard</h1>
    <p class="subtitle">Manage your business expenses efficiently</p>

    <div class="summary-cards">
        @foreach (var item in Model.Summary)
        {
            <div class="summary-card @item.StatusName.ToLower()">
                <h3>@item.StatusName</h3>
                <div class="count">@item.Count</div>
                <div class="total">Â£@item.TotalAmount.ToString("N2")</div>
            </div>
        }
    </div>

    <div class="quick-actions">
        <h2>Quick Actions</h2>
        <div class="action-grid">
            <a href="/AddExpense" class="action-card">
                <span class="icon">âž•</span>
                <span class="label">Add Expense</span>
            </a>
            <a href="/Expenses" class="action-card">
                <span class="icon">ðŸ“‹</span>
                <span class="label">View All Expenses</span>
            </a>
            <a href="/Approve" class="action-card">
                <span class="icon">âœ…</span>
                <span class="label">Approve Expenses</span>
            </a>
            <a href="/Chat" class="action-card">
                <span class="icon">ðŸ’¬</span>
                <span class="label">AI Assistant</span>
            </a>
        </div>
    </div>

    <div class="recent-expenses">
        <h2>Recent Expenses</h2>
        @if (Model.RecentExpenses.Any())
        {
            <table class="expense-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.RecentExpenses.Take(5))
                    {
                        <tr>
                            <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                            <td>@expense.CategoryName</td>
                            <td>@expense.Description</td>
                            <td class="amount">Â£@expense.Amount.ToString("N2")</td>
                            <td><span class="status-badge @expense.StatusName.ToLower()">@expense.StatusName</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-data">No expenses found.</p>
        }
    </div>
</div>

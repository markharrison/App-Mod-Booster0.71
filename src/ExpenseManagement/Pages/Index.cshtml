@page
@model ExpenseManagement.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="card">
    <h1 class="page-title">Expense Dashboard</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="error-message">
            <strong>Error:</strong> @Model.ErrorMessage
            @if (!string.IsNullOrEmpty(Model.ErrorLocation))
            {
                <br />
                <small>Location: @Model.ErrorLocation</small>
            }
            @if (!string.IsNullOrEmpty(Model.ErrorGuidance))
            {
                <br />
                <em>@Model.ErrorGuidance</em>
            }
        </div>
    }

    @if (Model.Summary != null && Model.Summary.Any())
    {
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 2rem;">
            @foreach (var item in Model.Summary)
            {
                <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 1.5rem; border-radius: 12px; color: white;">
                    <div style="font-size: 0.875rem; opacity: 0.9;">@item.StatusName</div>
                    <div style="font-size: 2rem; font-weight: 700; margin: 0.5rem 0;">@item.Count</div>
                    <div style="font-size: 1.25rem; font-weight: 600;">£@item.TotalAmount.ToString("N2")</div>
                </div>
            }
        </div>
    }

    <h2 style="font-size: 1.5rem; margin-bottom: 1rem; color: #2d3748;">Recent Expenses</h2>

    @if (Model.Expenses != null && Model.Expenses.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Employee</th>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model.Expenses)
                {
                    <tr>
                        <td>@expense.ExpenseDate.ToString("yyyy-MM-dd")</td>
                        <td>@expense.UserName</td>
                        <td>@expense.CategoryName</td>
                        <td>£@expense.Amount.ToString("N2")</td>
                        <td>@expense.Description</td>
                        <td>
                            <span class="status-badge status-@expense.StatusName.ToLower()">
                                @expense.StatusName
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.UseDummyData)
    {
        <div style="text-align: center; padding: 3rem; color: #718096;">
            <p style="font-size: 1.25rem; margin-bottom: 0.5rem;">Using dummy data</p>
            <p>Database connection is not available. Check error message above for details.</p>
        </div>
    }
    else
    {
        <div style="text-align: center; padding: 3rem; color: #718096;">
            <p>No expenses found. Start by creating your first expense!</p>
        </div>
    }
</div>

<div class="card">
    <h2 style="font-size: 1.5rem; margin-bottom: 1rem; color: #2d3748;">Quick Actions</h2>
    <div style="display: flex; gap: 1rem;">
        <a href="/api/expenses" class="btn btn-primary">View All Expenses (API)</a>
        <a href="/swagger" class="btn btn-primary">API Documentation</a>
        <a asp-page="/Chat" class="btn btn-primary">Chat with AI</a>
    </div>
</div>
